#!/bin/csh -ef

# @configure_input@

mkdir -p @prefix@/src
cd @prefix@/src

set cfitsio=cfitsio3420

if ( ! -f ${cfitsio}.tar.gz ) then
  @download@ ftp://heasarc.gsfc.nasa.gov/software/fitsio/c/${cfitsio}.tar.gz
endif

gunzip -c ${cfitsio}.tar.gz | tar xvf -
cd cfitsio

patch < @abs_srcdir@/editcol.patch

./configure --prefix=@prefix@

make clean
make
make shared
make install

