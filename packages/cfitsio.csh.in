#!/bin/csh -ef

# @configure_input@

mkdir -p @prefix@/src
cd @prefix@/src

set cfitsio=cfitsio-3.48
set place=http://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c

# http://heasarc.gsfc.nasa.gov/FTP/software/fitsio/c/cfitsio-3.48.tar.gz

if ( ! -f ${cfitsio}.tar.gz ) then
  @download@ ${place}/${cfitsio}.tar.gz
endif

gunzip -c ${cfitsio}.tar.gz | tar xvf -
cd $cfitsio

./configure --prefix=@prefix@ --enable-reentrant

make clean
make
make shared
make install

